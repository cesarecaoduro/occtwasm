{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@occtwasm/core": ["../../src/index.ts"]
    },
    "baseUrl": "."
  },
  "include": [
    "src/**/*.ts",
    "../../src/**/*.ts",
    "../../bindings/**/*.ts"
  ]
}
