{
  "name": "@occtwasm/core",
  "version": "0.1.0",
  "description": "OpenCascade (OCCT) compiled to WebAssembly with TypeScript bindings",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./occt.wasm": "./dist/occt.wasm"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "codegen": "tsx codegen/src/codegen.ts",
    "build:ts": "tsup",
    "build": "npm run codegen && npm run build:ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist bindings/generated"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "tsup": "^8.3.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0",
    "yaml": "^2.6.0"
  },
  "keywords": [
    "opencascade",
    "occt",
    "cad",
    "webassembly",
    "wasm",
    "brep",
    "geometry"
  ],
  "license": "LGPL-2.1-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/cesarecaoduro/occtwasm"
  },
  "engines": {
    "node": ">=18"
  }
}
